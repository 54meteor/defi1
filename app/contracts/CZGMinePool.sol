    // 收款账号
    address private _sell = 0xfB3CA6F2Fd177Be39D9201E5eD65691C587a7De4; 

    // for query
    // 查询 用户购买的金额
    mapping (address => uint256) public userMapping;
    
    // event
    event payUSDTEvent(address indexed _from, address indexed _to, uint256 _value, address indexed contractAddress);

    // need to approve first
    /* 
     *  授权转账（购买业务）
     *  address _from 购买的用户地址
     *  uint256 _amount 购买的金额
     */
    function buyFromUSDT(address _from, uint256 _amount) public {
        
        require( _from != address(0) , "User cannot be a 0x0 address");
        require( _amount > 0 , "Amount must be more than 0");
        require(userMapping[_from] == 0, "Each user can only purchase once");
        
        userMapping[_from] = userMapping[_from].add(_amount); 
        
        IERC20(_usdt).safeTransferFrom(_from, _sell, _amount);
        
        payUSDTEvent(_from, _sell, _amount, address(_usdt));    
    }
}